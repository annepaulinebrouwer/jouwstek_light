<div class="sign-in">
  <div class="log-in-wrapper">
    <div class="container">
      <div class="sign-in-form-box">
        <div class="sign-in-form-title">
        <h2>Log in</h2>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
          <p class="text-left">
            De Gezonde Stad geeft alle vrijheid aan tuineigenaren en tuinzoekers om onderling afspraken te maken en is niet aansprakelijk voor eventuele misstanden
          </p>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class:"btn-success" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

