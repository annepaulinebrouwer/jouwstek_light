<div class="garden-new">
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6 form-group">
        <div class="garden-form-box">
          <div class="garden-form-title"><h2>Hi <%=current_user.first_name %>, <small> welkom bij de Jouw Stek gemeenschap</small></h2></div>

          <%= simple_form_for(@garden, url: owner_garden_path) do |g| %>
          <%= g.error_notification %>

          <%= g.input :title, :input_html => {:maxlength => 80}, placeholder: 'Omschrijf je tuin in 5 woorden' %>
          <%= g.input :address, :input_html => {:maxlength => 50}, placeholder: 'Straat + huisnummer' %>
          <%= g.input :city, :input_html => {:maxlength => 50}, placeholder: 'Stad' %>
          <%= g.input :description, as: :text, :input_html => {:maxlength => 1000}, placeholder: 'Vertel in maximaal honderd woorden wat er uniek is aan jouw tuin en wat jouw verwachtingen zijn. Bijvoorbeeld het oppervlakte, de soorten planten die er groeien.' %>

          <div class="btn-form-garden">
            <%= g.input :photo, label: 'afbeelding 1' %>
            <%= g.input :photo2, label: 'afbeelding 2'  %>
            <%= g.input :photo3, label: 'afbeelding 3'  %>
          </div>

          <%= g.button :submit, "verzenden", class: "btn btn-success" %>
          <% end %>
        </div>
       </div>
     </div>
  </div>
</div>

