<div class="reviews-form" >
  <div class="container">
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6 form-group">
        <div class="review-form-box">
          <h2>Hoi <%= @current_user.first_name %>, <small>schrijf een review </small></h2>
          <%= simple_form_for(review, url: path) do |g| %>
          <%= g.error_notification %>

          <%= g.input :description, label: "beschrijving", as: :text, :input_html => {:maxlength => 500}, placeholder: 'Vertel ons over jouw ervaring..' %>
          <%= g.input :stars, label: "sterren",  as: :select, :collection => [1, 2, 3, 4, 5] %>

          <div class="btn-review">
          <%= g.button :submit, "verstuur review", class: "btn-success" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
