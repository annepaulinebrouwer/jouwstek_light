
<div class="booking-item">
  <div class="booking-item-user">
   <div><%= link_to image_tag(allotment.user.photo, class: "avatar-large"), user_path(allotment.user) %></div>
    <div class="booking-item-user-name"><%= allotment.user.fullname %></div>
  </div>
  <div class="booking-item-data">
    <div><%= allotment.start_day.strftime("%A, %b %d")%></div>
    <div><%= allotment.end_day.strftime("%A, %b %d")%></div>
  </div>
  <div class="booking-item-message"><%= allotment.message %></div>
  <div class="booking-item-side">
    <div><% if allotment.request_status == "pending" %>
      <%= link_to "accepteer", accept_owner_allotment_path(allotment), class: "btn btn-success btn-sm booking-item-btn", method: :patch %>
      <%= link_to "afwijzen", decline_owner_allotment_path(allotment), class: "btn btn-danger btn-sm booking-item-btn", method: :patch %>
      <% elsif allotment.request_status == "accepted" %>
      <%= link_to "schrijf review", new_owner_allotment_user_review_path(allotment), class: "btn btn-success btn-sm" %>
    <% end %>
  </div>
 </div>
</div>

