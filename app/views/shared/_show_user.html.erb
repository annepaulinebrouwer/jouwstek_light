<div class="wrapper-white-about">
  <div class="container">
    <div class="user-container">
      <div class="user-container-text">
        <div class="row">
          <div class="col-xs-12" style="padding: 20px">
            <%= cl_image_tag  @user.photo, cl_image_options_avatar_large(class: "avatar-extralarge")%>
            <h3><%= @user.fullname %></h3>
            <div class="user-description"><%= @user.description %></div>
            <div><% if current_user == @user %><%= link_to "pas je profiel aan", edit_user_profile_path, { class: "btn btn-success"} %></div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
    <% if @user.user_reviews.exists? %>
        <div class="user-container2">
          <div class="row">
            <div class="col-xs-12"><h3>Reviews</h3>
              <div class="section-title-border"></div>
            </div>
          </div>

          <div class="row">
            <% @user.user_reviews.each do |review| %>
              <div class="col-xs-12 col-sm-6">
                <div class="review-cards-user">
                  <%= link_to user_profile_path(@user) do %>
                    <div class="circle">
                      <%= cl_image_tag review.owner.photo,  cl_image_options_avatar_large(class: "avatar-medium", id: "avatar-review") %>
                    </div>
                  <% end %>
                  <div class="review-name">
                    <p> <%= review.owner.fullname %></p>
                  </div>
                  <div class="review-text">
                    <p><%= review.description %></p>
                  </div>
                  <div class="carrots">
                    <% review.stars.times do %>
                      <%= image_tag "carrot_full.png", class: "small-icon"%>
                    <% end %>
                    <% (5 - review.stars).times do %>
                      <%= image_tag "carrot_empty.png",  class: "small-icon"%>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>
