<div class="counters wrapper-grey padded" >
  <div class="col-sm-offset-3 col-sm-3">
    <%= link_to gardens_path do %>
    <div class="count-card">
      <p> See all our <span class="count"> <%= Garden.count %></span> gardens </p>
    </div>
    <% end %>
  </div>

  <div class="col-sm-3">
    <%= link_to new_user_registration_path, { "data-toggle": "modal", "data-target": "#sign-up" } do %>
    <div class="count-card">
      <p> Become one of our <span class="count"><%= User.count %></span> greenkeepers </p>
    </div>
    <% end %>
  </div>
</div>


<div class="container" style="padding-top: 80px; padding-bottom: 50px">
  <div class="row">
    <% @gardens[0..1].each do |garden|%>
    <% if garden.available == true %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background: url('<%= garden.photo %>');">
        <div class="card-hover">
          <h2><%= garden.title %></h2>
          <p><%= truncate(garden.description, length: 310) %></p>
          <div id="garden-address">
           <p ><%= garden.address %></p>
         </div>
       </div>
       <%= link_to "", garden_path(garden), { class: "card-link" } %>
     </div>
   </div>
   <% end %>
   <% end %>
   <div class="col-xs-12 col-sm-4">
    <div class="card" style="background: url(<%= image_path 'your-garden.jpg' %>);">
      <div class="card-hover">
        <h2>Your garden</h2>
        <p> This could be your garden </p>
      </div>
    </div>
  </div>
</div>
<div class=" how-to text-center"><p> Want to share some space in your garden? <%= link_to "Become a greenhost", new_owner_garden_path, {class: "link"} %> </p></div>
</div>


<div class="wrapper-grey padded" style="background-color: #FAFAFA">

  <div class="container">
    <div class="row">
      <% @recommendations.each do |recommendation| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card-testimonial">
          <%= cl_image_tag(recommendation.photo, class: "avatar-xxl", style: "margin-left: 6%") %>
          <div class="section-title-border-testimonial"></div>
          <p> 
            <%= recommendation.content %>
          </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
